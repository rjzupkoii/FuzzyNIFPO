	TERM important  			:= (3, 0) (4, 1) (5, 0);		// 4
	TERM very_important  		:= (4, 0) (5, 1);				// 5
END_FUZZIFY

FUZZIFY OBJ_NAT
	TERM not_important   		:= (1, 1) (2, 0);				// 1, 8
	TERM of_little_importance	:= (1, 0) (2, 1) (3, 0);		// 2
	TERM moderately_important 	:= (2, 0) (3, 1) (4, 0);		// 3
	TERM important  			:= (3, 0) (4, 1) (5, 0);		// 4
	TERM very_important  		:= (4, 0) (5, 1);				// 5
END_FUZZIFY

FUZZIFY OBJ_PRI
	TERM not_important   		:= (1, 1) (2, 0);				// 1, 8
	TERM of_little_importance	:= (1, 0) (2, 1) (3, 0);		// 2
