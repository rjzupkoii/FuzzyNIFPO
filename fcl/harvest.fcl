FUZZIFY OBJ_TIM
	TERM not_important   		:= (1, 1) (2, 0);				// 1, 8
	TERM of_little_importance	:= (1, 0) (2, 1) (3, 0);		// 2
	TERM moderately_important 	:= (2, 0) (3, 1) (4, 0);		// 3
