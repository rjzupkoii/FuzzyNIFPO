// Defzzzify output variable 'result' : {'no', 'maybe', 'yes'}
DEFUZZIFY result
	TERM no    := (0, 1) (2, 1) (3, 0);
	TERM maybe := (2, 0) (4, 1) (6, 1) (8, 0); 
	TERM yes   := (7, 0) (8, 1) (10, 1);
	METHOD : COG;
	DEFAULT := 0;
END_DEFUZZIFY

// Generally we assume that NIPFOs have certain views that are in conflict with 
// harvesting activity. For example, if they state that believe that clear 
// cutting is not aesthetically pleasing and that they wish to preserve wild 
// life habitat, they are unlikely to harvest
RULEBLOCK rules
	AND  : MIN;
	ACT  : MIN;
	ACCU : MAX;
	
	// Harvesting based upon parcel size
	RULE 1 : IF parcel IS small THEN result IS no;
	RULE 2 : IF parcel IS large THEN result IS yes;
	
	// Harvesting based upon concerns
	
	
	// Harvesting based upon objectives
	RULE 3 : IF OBJ_BEA IS not_important OR OBJ_BEA IS of_little_importance THEN result IS yes;
	RULE 4 : IF OBJ_NAT IS NOT not_important AND OBJ_NAT IS NOT of_little_importance THEN result IS no;
	RULE 5 : IF OBJ_TIM IS NOT not_important AND OBJ_TIM IS NOT of_little_importance THEN result IS yes;
	
	// Harvesting based upon certifications
	RULE 6 : IF certification IS yes THEN result IS yes; 
		
END_RULEBLOCK

END_FUNCTION_BLOCK